{
	"name": "@titanium/axios",
	"version": "1.0.9",
	"description": "‚≠ê  Axway Amplify module for using axios with http/https/api with Appcelerator Titanium SDK",
	"main": "index.js",
	"scripts": {
		"test2": "grunt test && bundlesize",
		"start": "node ./sandbox/server.js",
		"build": "NODE_ENV=production grunt build",
		"preversion_": "npm test",
		"version_": "npm run build && grunt version && git add -A dist && git add CHANGELOG.md bower.json package.json",
		"postversion_": "git push && git push --tags",
		"examples": "node ./examples/server.js",
		"list-files": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
		"coveralls": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"fix": "eslint --fix lib/**/*.js",
		"lint": "eslint . --fix",
		"list": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
		"prep": "npm install --ignore-scripts",
		"test": "npm run prep",
		"prepublishOnly": "git pull && npm test && bump insane",
		"prepublishOnly2": "git pull && npm test && npm audit fix && bump insane"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mobilehero-archive/titanium-axios.git"
	},
	"keywords": [
		"xhr",
		"http",
		"ajax",
		"promise",
		"node",
		"titanium",
		"mobile",
		"axway",
		"appcelerator",
		"plugin",
		"amplify",
		"api-builder",
		"appcelerator-titanium",
		"titanium-sdk",
		"titanium-mobile",
		"titanium-module",
		"axway-sdk",
		"axway-amplify",
		"brenton-house"
	],
	"author": "Matt Zabriskie",
	"maintainers": [
		{
			"name": "Brenton House",
			"url": "https://brenton.house"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/mobilehero-archive/titanium-axios/issues"
	},
	"homepage": "https://brenton.house/saying-goodbye-to-axway-amplify-titanium-31a44f3671de",
	"browser": {
		"./lib/adapters/http.js": "./lib/adapters/xhr.js"
	},
	"typings": "./index.d.ts",
	"dependencies": {
		"@geek/cache": "^1.0.2",
		"@geek/config": "^0.2.4",
		"@geek/dotenv": "^0.0.9",
		"@geek/jsonc": "^1.0.4",
		"@geek/jwt": "^1.0.1",
		"@geek/logger": "^1.0.18",
		"@geek/retry": "^1.0.0",
		"@geek/spawn": "^0.0.3",
		"@geek/spinner": "^1.0.2",
		"@geek/tld": "^2.0.1-1",
		"@nativeloop/mobile": "^1.0.8",
		"@titanium/appcelerator": "^6.0.9",
		"@titanium/authentication": "^1.0.24",
		"@titanium/authentication-mock": "^1.0.6",
		"@titanium/authentication-oauth": "^1.0.26",
		"@titanium/bluebird": "^3.7.17",
		"@titanium/errors": "^1.0.12",
		"@titanium/essentials": "^1.0.43",
		"@titanium/events": "^1.0.23",
		"@titanium/eventsource": "^1.0.12",
		"@titanium/identity": "^2.0.15",
		"@titanium/json5": "^1.0.8",
		"@titanium/jsonc": "^1.0.10",
		"@titanium/jwt": "^1.0.15",
		"@titanium/module-copier": "^1.0.18",
		"@titanium/please": "^1.0.21",
		"@titanium/polyfill": "^1.0.22",
		"@titanium/querystring": "^1.0.9",
		"@titanium/tiapp-xml": "^1.0.20",
		"@titanium/titanium": "^5.4.17",
		"@titanium/turbo": "^2.2.35",
		"follow-redirects": "1.14.7",
		"is-buffer": "^2.0.5",
		"nativeloop": "^1.0.7",
		"tiapp-dir": "^1.0.12"
	},
	"bundlesize": [
		{
			"path": "./dist/axios.min.js",
			"threshold": "5kB"
		}
	],
	"devDependencies": {
		"@geek/eslint-config": "^1.0.3",
		"@titanium/eslint-config": "^1.0.15",
		"eslint": "^8.6.0"
	}
}
